/**index.wxss**/

/* ===================== */

.menu {
  display: flex;
  align-items: center;
  width: 100%;
}
.menu-item {
  flex: 1;
  height: 12vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  background-color: white;
}
.menu-item-content {
  background-color: #fafafa;
  width: 80rpx;
  height: 80rpx;
  border-radius: 15rpx;
  display: flex;
  align-item: center;
  justify-content: center;
  margin-bottom: 10rpx;
}
.menu-item image {
  width: 50rpx;
  height: 50rpx;
  margin: auto;
}
.menu-item text {
  font-size: 24rpx;
  color: #333;
}

.production-tools {
  background-color: white;
  width: 100vw;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 1;
}
.category {
  z-index: 10;
  width: 100vw;
  height: 80rpx;
  white-space: nowrap;
  border-bottom: 2rpx solid #f0f0f0;
}
.category-item {
  margin: 0 20rpx;
  height: 76rpx;
  line-height: 76rpx;
  display: inline-block;
  font-size: 28rpx;
}
.category-item-s {
  color: #ec6933;
  border-bottom: 4rpx solid #ec6933;
}
.tools {
  display: flex;
  align-items: center;
  height: 60rpx;
}
.tools view {
  width: 25%;
  font-size: 24rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: grey;
}
.tools view image {
  width: 25rpx;
  height: 40rpx;
  margin-left: 10rpx;
}
.tool-s {
  color: #ec6933 !important;
}
.sell-container {
  width: 100%;
  height: 280rpx;
  box-sizing: border-box;
  padding: 15rpx;
  background-color: #fff;
}
.sell-swiper {
  width: 650rpx;
  height: 100%;
  margin: 0 auto;
}
.sell-item {
  border-radius: 12rpx;
  overflow: hidden;
  height: 100%;
}

.sell-item image {
  width: 100%;
  height: 100%;
}

.search-bar {
  height: 120rpx;
  width: 100%;
  background-color: red;
}