.qrcode {
  display: flex;
  height: 100vh;
  flex-direction: column;
  justify-content: center;
}

.qrcode-preview {
  width: 80vw;
  height: 80vw;
  padding: 20rpx;
  background-color: #f1f1f1;
  border-radius: 8rpx;
  margin: 20rpx auto;
}

.qrcode-prompt {
  font-size: 28rpx;
  margin-top: 32rpx;
}

.qrcode-prompt text {
  color: #04be02;
  font-weight: bold;
  padding: 0 10rpx;
}

.qrcode-preview canvas {
  width: 100%;
  height: 100%;
}

.qrcode {
  text-align: center;
}

.qrcode-input {
  width: 80vw;
  height: 140rpx;
  padding: 20rpx;
  text-align: left;
  margin: 20rpx auto;
  border-radius: 8rpx;
  border: 1rpx solid #ebebeb;
  background-color: #fafafa;
}

.qrcode-btn {
  margin: 40rpx auto 0;
  width: 240rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #3cb067;
  color: #fff;
  border-radius: 8rpx;
  text-align: center;
}